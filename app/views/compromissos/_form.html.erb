<%= form_for @compromisso, :html => { :class => "form-horizontal compromisso" } do |f| %>

  <% if @compromisso.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@compromisso.errors.count, "error") %> prohibited this compromisso from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @compromisso.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:titulo) %>
  </div>
  <div class="form-group">
    <%= f.label :texto, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :texto, :class => 'form-control' %>
    </div>
    <%=f.error_span(:texto) %>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.date_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                compromissos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
