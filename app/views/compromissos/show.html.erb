<%- model_class = Compromisso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @compromisso.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:texto) %>:</strong></dt>
  <dd><%= @compromisso.texto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @compromisso.date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              compromissos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_compromisso_path(@compromisso), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              compromisso_path(@compromisso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
