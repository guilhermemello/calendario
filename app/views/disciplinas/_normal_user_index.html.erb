<%- model_class = Disciplina -%>
<%= form_tag(disciplinas_path, :method => :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Entre com sua busca' %>
  <%= submit_tag "Search" %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
    </tr>
  </thead>
  <tbody>
    <% @disciplinas.each do |disciplina| %>
      <tr>
        <td><%= link_to disciplina.id, disciplina_path(disciplina) %></td>
        <td><%= disciplina.nome %></td>
        <td>
          <%= link_to t('.show', :default => t("herpers.links.show")), disciplina_path(disciplina), :class => 'btn btn-success btn-xs'%>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_disciplina_path(disciplina), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      disciplina_path(disciplina),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>
<%# paginate @disciplinas %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_disciplina_path,
            :class => 'btn btn-primary' %>
