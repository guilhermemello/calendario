<div class="clearfix"></div>
<%= form_for :user, url: '/users', html: { id: 'form-cadastro' } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nome do usuário' %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: 'form-control', placeholder: 'E-mail' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Senha com mínimo de 8 caracteres' %>
  </div>
  <div class-"form-group">  
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Favor confirmar a senha' %></br></br>
      <%= f.submit "Submit", class: 'btn btn-default bot-verde' %>
   </div>
  <% end %>

